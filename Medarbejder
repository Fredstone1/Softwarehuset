package softwarehuset;

import java.util.ArrayList;
import java.util.List;

public class Medarbejder {
	
	public String ID, Navn; 
	public Boolean Ledig;
	public List<Aktivitet> AntalAktiviteter = new ArrayList<Aktivitet>();
	public List<Projekt> Projekt = new ArrayList<Projekt>();
	
	
	public Medarbejder(String Navn, String ID) {
		this.Navn = Navn;
		this.ID = ID;
	}
	
	public String getID() { //vi får medarbejderens ID
		return ID;
	}
	
	public String getNavn() {
		return Navn;
	}
	
	public Boolean getLedig() {
		return Ledig;
	}
	
	public void RegistrerTimer(Aktivitet aktivitet, int arbejdstimer){
		if (AntalAktiviteter.contains(aktivitet)){ 
		aktivitet.setAntalArbejdstimer(arbejdstimer);
		}
	}
	
	public void søgAssistance() {
		
	}
	public boolean isProjektL() {
		if (Projekt.size() < 1){
			return false;
		} else 
			return true;
	}
}
