package softwarehuset;
import static org.junit.Assert.*;

import org.junit.Test;


public class TestMedarbejder {

	static Softwarehuset prog = new Softwarehuset();
	static ProjektLeder progL = new ProjektLeder("Jan", "0103");
	
	//Vi vil nu gerne oprette en medarbejde
	Medarbejder medarb1 = new Medarbejder("Hubert", "0101");
	Medarbejder medarb2 = new Medarbejder("Magnus", "0102");
	Medarbejder medarb3 = new Medarbejder("Frederik", "0103");
					
	
	@Test
	public void testArrayfunction() throws Exception{
		//Tilføj ham til medarbejder array
		prog.opretUser(medarb1);
		prog.opretUser(medarb2);
		prog.opretUser(medarb3);
				
		//Test vores array
		assertEquals(Softwarehuset.MedarbejderListe.size(),3);
		
		//Test af første medarbejder
		assertEquals(Softwarehuset.MedarbejderListe.get(0).Navn, "Hubert");
		assertEquals(Softwarehuset.MedarbejderListe.get(0).ID, "0101");
		
		//Test af anden medarbejder
		assertEquals(Softwarehuset.MedarbejderListe.get(1).Navn, "Magnus");
		assertEquals(Softwarehuset.MedarbejderListe.get(1).ID, "0102");
		
		//Test af tredje medarbejder
		assertEquals(Softwarehuset.MedarbejderListe.get(2).Navn, "Frederik");
		assertEquals(Softwarehuset.MedarbejderListe.get(2).ID, "0103");
	}
	
	@Test
	public void testLedigMedarbejder() throws Exception{
		
		//Vi tester nu ProjektLederens Metode LedigeMedarbejdere
		progL.LedigeMedarbejder();
		assertEquals(ProjektLeder.LedigMedarbejderListe.get(0).Navn, "Hubert");
		assertEquals(ProjektLeder.LedigMedarbejderListe.get(1).Navn, "Magnus");
		assertEquals(ProjektLeder.LedigMedarbejderListe.get(2).Navn, "Frederik");
	}
}
