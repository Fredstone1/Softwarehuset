package softwarehuset;

import java.util.ArrayList;
import java.util.Calendar;
import java.util.List;

public class Projekt {

	String Navn, Projektnummer;
	Calendar cal = Calendar.getInstance();
	public List<Aktivitet> TilknyttedeAktiviteter = new ArrayList<Aktivitet>();
	int month = cal.get(Calendar.MONTH);
	
	public Projekt(String Navn) {
		this.Navn = Navn;
		this.Projektnummer = løbeNummer();
	}
	
	public String getNavn(){
		return Navn;
	}
	
	public String getProjektNummer() {
		return Projektnummer;
	}
	
	public static String løbeNummer(){
		// Dette laver starten på løbenummeret, i form af et årstal og uge nummer.
		String løbeNummer, numb = null;
		Calendar cal = Calendar.getInstance();
		int year1 = cal.get(Calendar.YEAR);
		String year = Integer.toString(year1);
		year = year.substring(2,4);
		int størrelse = Softwarehuset.ProjektListe.size()+1;
		
		
		// Til foregående kode laver vi nu et unikt nummer der bliver tilføjet.
		if(Softwarehuset.ProjektListe.size() < 10 ){
			numb = "000"+Integer.toString(Softwarehuset.ProjektListe.size()+1);
		} else if (Softwarehuset.ProjektListe.size() < 100){
			numb = "00"+Integer.toString(størrelse);
		} else if (Softwarehuset.ProjektListe.size() < 1000){
			numb = "0"+Integer.toString(størrelse);
		} else if (Softwarehuset.ProjektListe.size() > 1000){
			numb = Integer.toString(størrelse);
		}
		løbeNummer = year+numb;
		return løbeNummer;
	}
}