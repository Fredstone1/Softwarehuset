package softwarehuset;

import java.util.ArrayList;
import java.util.Calendar;
import java.util.List;

public class Softwarehuset {

	public static List<Medarbejder> MedarbejderListe = new ArrayList<Medarbejder>();
	public static List<Medarbejder> ProjektLederList = new ArrayList<Medarbejder>();
	public static List<Projekt> ProjektListe = new ArrayList<Projekt>();
	

	public static void opretUser(Medarbejder medarbejder) {
		MedarbejderListe.add(medarbejder);
		}

	public static void opretProjekt(Projekt projekt) {
		ProjektListe.add(projekt);
	}
	
	public void ProjektLedelTildel(String ID, Projekt projekt) {
		int i = 0;
		for (int j = 0; j < Softwarehuset.MedarbejderListe.size(); j++){
			Medarbejder temp = Softwarehuset.MedarbejderListe.get(j);
			if (temp.ID.equals(ID)) {
				i = j;
				break;
			}
		}
		if (ProjektLeder.LedigMedarbejderListe.get(i).Projekt.size()<1){
			ProjektLeder.LedigMedarbejderListe.get(i).Projekt.add(projekt); //tilfÃ¸jer aktivitet til et array tilknyttet hver medarbejder 
			ProjektLederList.add(Softwarehuset.MedarbejderListe.get(i)); 
		}

	}
	public void ProjektLederFjern(String ID, Projekt projekt) {
		int i = 0;
		for (int j = 0; j < Softwarehuset.MedarbejderListe.size(); j++){
			Medarbejder temp = Softwarehuset.MedarbejderListe.get(j);
			if (temp.ID.equals(ID)) {
				i = j;
				break;
			}
		}
		if (Softwarehuset.MedarbejderListe.get(i).Projekt.size()==1){
			ProjektLederList.remove(Softwarehuset.MedarbejderListe.get(i));
		}
		
	}
	
}