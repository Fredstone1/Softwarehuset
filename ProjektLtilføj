package softwarehuset;

import static org.junit.Assert.*;

import org.junit.Test;

public class ProjektLtilf√∏j {
	

	static Softwarehuset prog = new Softwarehuset();
	static ProjektLeder progL = new ProjektLeder("Jan", "0104", true);
		

	@Test
	public void test() {
		Medarbejder medarb1 = new Medarbejder("Hubert", "0101", true);
		Medarbejder medarb2 = new Medarbejder("Frederik", "0102", true);
		Medarbejder medarb3  = new Medarbejder("Magnus", "0103", false);
		prog.opretUser(medarb1);
		prog.opretUser(medarb2);
		prog.opretUser(medarb3);
		Projekt projekt1 = new Projekt("Byg Hjemmeside");
		Projekt projekt2 = new Projekt("Byg Hjemmeside2");
		Projekt projekt3 = new Projekt("Byg Hjemmeside3");
		prog.opretProjekt(projekt1);
		prog.ProjektLedelTildel("0102", projekt1);
		prog.ProjektLedelTildel("0101", projekt2);
		prog.ProjektLedelTildel("0103", projekt3);
		
		
		assertEquals(prog.ProjektLederList.contains(medarb1), true);
		assertEquals(prog.ProjektLederList.contains(medarb2), true);
		assertEquals(prog.ProjektLederList.contains(medarb3), false);
		assertEquals(prog.MedarbejderListe.get(1).Projekt.contains(projekt1),true);
		assertEquals(prog.MedarbejderListe.get(0).isProjektL(), true);
		assertEquals(prog.MedarbejderListe.get(2).isProjektL(), false);
	}

}

